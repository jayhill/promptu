using System;
using System.Collections.Generic;
using System.Text;
using System.Windows.Forms;

namespace ZachJohnson.Promptu.SkinApi
{
    // TODO evaluate
    public class KeyPressedEventArgs : EventArgs
    {
        private Keys keyCode;
        private bool cancel;
        //private bool shiftKeyPressed;
        //private bool altKeyPressed;
        //private bool ctrlKeyPressed;
        private bool winKeyPressed;

        public KeyPressedEventArgs(Keys keyCode, bool winKeyPressed)//, bool shiftKeyPressed, bool altKeyPressed, bool ctrlKeyPressed, bool winKeyPressed)
        {
            this.keyCode = keyCode;
            //this.shiftKeyPressed = shiftKeyPressed;
            //this.altKeyPressed = altKeyPressed;
            //this.ctrlKeyPressed = ctrlKeyPressed;
            this.winKeyPressed = winKeyPressed;
        }

        public bool Cancel
        {
            get { return this.cancel; }
            set { this.cancel = value; }
        }

        public bool ShiftKeyPressed
        {
            get { return (this.keyCode & Keys.Shift) == Keys.Shift; }
        }

        public bool AltKeyPressed
        {
            get { return (this.keyCode & Keys.Alt) == Keys.Alt; }
        }

        public bool CtrlKeyPressed
        {
            get { return (this.keyCode & Keys.Control) == Keys.Control; }
        }

        public bool WinKeyPressed
        {
            get { return this.WinKeyPressed; }
        }

        public Keys KeyCode
        {
            get { return this.keyCode; }
        }
    }
}
