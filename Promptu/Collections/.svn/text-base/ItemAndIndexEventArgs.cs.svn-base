using System;
using System.Collections.Generic;
using System.Text;

namespace ZachJohnson.Promptu.Collections
{
    internal class ItemAndIndexEventArgs<T> : ItemEventArgs<T>
    {
        private int index;

        public ItemAndIndexEventArgs(T item, int index) 
            : base(item)
        {
            this.index = index;
        }

        public int Index
        {
            get { return this.index; }
        }
    }
}
