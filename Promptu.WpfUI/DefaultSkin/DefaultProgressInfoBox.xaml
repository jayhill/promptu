<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ZachJohnson_Promptu_WpfUI_UIComponents="clr-namespace:ZachJohnson.Promptu.WpfUI.UIComponents" x:Class="ZachJohnson.Promptu.WpfUI.DefaultSkin.DefaultProgressInfoBox"
        x:ClassModifier="internal"
        Title="DefaultProgressInfoBox"
		Width="Auto" Height="Auto" WindowStyle="None" SizeToContent="WidthAndHeight" ResizeMode="NoResize" ShowInTaskbar="False" MinWidth="20" MinHeight="20" SnapsToDevicePixels="True" AllowsTransparency="True" Background="{x:Null}">
	<Grid HorizontalAlignment="Left" VerticalAlignment="Top">
		<Border BorderThickness="1" SnapsToDevicePixels="True" CornerRadius="2" Background="#FFF1F1F1"/>
		<Border BorderBrush="#FF858585" BorderThickness="1" SnapsToDevicePixels="True" CornerRadius="2">
			<Border.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#19000000" Offset="1"/>
					<GradientStop/>
				</LinearGradientBrush>
			</Border.Background>
			<Grid Margin="7">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<TextBlock x:Name="label" Margin="0,0,0,5" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
				<ProgressBar x:Name="progressBar" Margin="0" Grid.Row="1" VerticalAlignment="Top" Height="15"/>
			</Grid>
		</Border>
	</Grid>
</Window>
